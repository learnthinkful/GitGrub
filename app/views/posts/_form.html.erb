<a href="#" class="btn btn-success btn-margin purp "
  data-toggle="modal"
  data-target="#basicModal">Create a post</a>

<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title" id="myModalLabel">Where are you going to eat?</h4>
      </div>      
      <div class="container-fluid">
        <div class="row row-centered">
          <div class="col-md-6 col-centered">
            <%= simple_form_for(@post, remote: true, html: { class: 'form-horizontal' }) do |f| %>
              <p>
                <%= f.input :place %>
              </p>
              <p>
                <%= f.input :neighborhood %>
              </p>
              <p>
                <%= f.input :time, :as => :datetime_picker %>
              </p>
              <p>
                <%= f.input :body %>
              </p>
              <p>
                <%= f.button('submit', :class => 'btn btn-success btn-margin purp pull-right', :id => "addSubmit") %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">  
  $('#addSubmit').click(function() {
    return $('#basicModal').modal('hide');
  });
</script>