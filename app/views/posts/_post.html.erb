<div class="panel panel-default">
  <div class="panel-body">
		<div class="well">
			<p>Join <strong><%= post.user.name %></strong> @ <strong><%= post.place %></strong> for grub around <strong><%= post.time %></strong> in <strong><%= post.neighborhood %></strong></p>
			<strong><%= post.user.name %>:</strong> <%= post.body %>
		</div>
			<p><%= link_to 'Edit', '#' %></p>


		<h2>Comments</h2>
		<div id="comments">
			<% post.comments.each do |comment| %>
			  <p>
			    <strong>User:</strong>
			    <%= comment.user.name %>
			  </p>
			 
			  <p>
			    <strong>Comment:</strong>
			    <%= comment.body %>
			  </p>

			  <hr>

			<% end %>
		</div>

		<h2>Add a comment:</h2>
		<div class="container-fluid">
		  <div class="row">
		    <div class="col-md-4">  
		      <%= simple_form_for([post, post.comments.build], html: { class: 'form-horizontal' }) do |f| %>
		        <p>
		          <%= f.input :body %>
		        </p>
		        <p>
		          <%= f.button 'submit' %>
		        </p>
		      <% end %>
		    </div>
		  </div>
		</div>
  </div>
</div>
