<div class="panel panel-default">
  <div class="panel-body">
		<p><strong><%= post.user.name %></strong><br>
			is getting grub at <strong><%= post.place %></strong> around <strong><%= post.time %></strong> in <strong><%= post.neighborhood %></strong>!</p>
			<h4><%= post.body %></h4>

		<hr>

		<div id="comments">
			<% post.comments.each do |comment| %>
			 <div class="well well-sm"><p>
			 			    <strong><em><%= comment.user.name %>:</em></strong><br>
			 			    <%= comment.body %>
			 			  </p></div>

			<% end %>
		</div>

		<div class="container-fluid">
		  <div class="row">
		    <div class="col-md-4">  
		      <%= simple_form_for([post, post.comments.build], class: 'form-horizontal') do |f| %>
		        <p>
		          <%= f.input :body, placeholder: 'Write a comment', label: false, :input_html => {:style => 'width: 300px'} %>
		        </p>
		        <p>
		          <%= f.button 'submit' %>
		        </p>
		      <% end %>
		    </div>
		  </div>
		</div>
  </div>
</div>
