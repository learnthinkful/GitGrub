<div class="panel panel-default">
  <div class="panel-body">
		<p>Join <strong><%= post.user.name %></strong> @ <strong><%= post.place %></strong> for grub around <strong><%= post.time %></strong> in <strong><%= post.neighborhood %></strong></p>
		<strong><%= post.user.name %>:</strong> <%= post.body %>

		<hr>

		<h4>Comments</h4>
		<div id="comments">
			<% post.comments.each do |comment| %>
			 <div class="well well-sm"><p>
			 			    <strong><em><%= comment.user.name %>:</em></strong><br>
			 			    <%= comment.body %>
			 			  </p></div>

			<% end %>
		</div>

		<div class="container-fluid">
		  <div class="row">
		    <div class="col-md-4">  
		      <%= simple_form_for([post, post.comments.build], class: 'form-horizontal') do |f| %>
		        <p>
		          <%= f.input :body %>
		        </p>
		        <p>
		          <%= f.button 'submit' %>
		        </p>
		      <% end %>
		    </div>
		  </div>
		</div>
  </div>
</div>
